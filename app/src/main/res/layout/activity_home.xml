<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_background"
    android:orientation="vertical"
    tools:context=".homeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <!--Logo-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#DD000000">

                <ImageView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/logo" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/requestButton"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_margin="20dp"
                    android:text="Request"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:backgroundTint="#00C30505"
                    android:textStyle="bold"
                    app:strokeColor="@color/white"
                    app:strokeWidth="2dp"
                    android:drawableTop="@drawable/req_icon"
                    android:drawableTint="@color/white"
                    android:padding="20dp"/>




                <Button
                    android:id="@+id/timelineButton"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_margin="20dp"
                    android:text="Timeline"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:backgroundTint="#00C30505"
                    android:textStyle="bold"
                    app:strokeColor="@color/white"
                    app:strokeWidth="2dp"
                    android:drawableTop="@drawable/timeline"
                    android:padding="20dp"/>

            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <Button
                    android:id="@+id/seeDonor"
                    android:layout_marginBottom="10dp"
                    android:layout_width="300dp"
                    android:layout_height="100dp"
                    android:padding="20dp"
                    android:backgroundTint="#00C30505"
                    android:drawableLeft="@drawable/donors_icon"
                    android:drawableTint="@color/white"
                    android:text="Donor List"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:strokeColor="@color/white"
                    app:strokeWidth="2dp" />




                <Button
                    android:id="@+id/bloodBankButton"
                    android:layout_width="300dp"
                    android:layout_height="100dp"
                    android:text="Blood Bank"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:backgroundTint="#00C30505"
                    android:textStyle="bold"
                    app:strokeColor="@color/white"
                    app:strokeWidth="2dp"
                    android:drawableLeft="@drawable/bank"
                    android:padding="20dp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="70dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/aboutUs"
                    android:layout_marginBottom="10dp"
                    android:layout_width="160dp"
                    android:layout_height="70dp"
                    android:backgroundTint="#00C30505"
                    android:text="About US"
                    android:textAlignment="center"
                    android:textColor="@color/red"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:strokeColor="@color/red"
                    app:strokeWidth="2dp"
                    android:layout_marginRight="10dp"/>




                <Button
                    android:layout_marginLeft="10dp"
                    android:id="@+id/contactUs"
                    android:layout_width="160dp"
                    android:layout_height="70dp"
                    android:text="Contact Us"
                    android:textAlignment="center"
                    android:textColor="@color/red"
                    android:textSize="18sp"
                    android:backgroundTint="#00C30505"
                    android:textStyle="bold"
                    app:strokeColor="@color/red"
                    app:strokeWidth="2dp"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@color/red"
                >
            <ImageView
                android:layout_gravity="center"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:src="@drawable/short_icon"
                android:background="@color/black"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Life String"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textAlignment="center"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Version : 1.0.0"
                        android:textSize="15sp"
                        android:textColor="#7E7878"
                        android:textAlignment="center"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Copyright Â© 2022 | All rights reserved"
                        android:textSize="15sp"
                        android:textColor="#7E7878"
                        android:textAlignment="center"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Binary Clan"
                        android:textSize="15sp"
                        android:textColor="#7E7878"
                        android:textAlignment="center"/>

                </LinearLayout>




            </LinearLayout>







        </LinearLayout>


    </LinearLayout>

</LinearLayout>